  # create a menu
menu = gtk.Menu()

class Menu:
	def screenshot(n):
		a, b = 0, 1
		while a < n:
			print a,
			a, b = b, a+b 
 
uploaditem = "Test"

menu_items = gtk.MenuItem(uploaditem)
menu.append(menu_items)

    # this is where you would connect your menu item up with a function:
    
menu_items.connect("activate", Menu.screenshot(100), uploaditem)

    # show the items
menu_items.show()

